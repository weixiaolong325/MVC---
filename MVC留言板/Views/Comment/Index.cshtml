@{
    Layout = null;
}
@model MVC留言板.ViewModels.CommentView 
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>留言板</title>
    <link href="~/Content/Web.css" rel="stylesheet" />
    <link href="~/Content/Index.css" rel="stylesheet" />
    <script src="http://libs.baidu.com/jquery/1.11.1/jquery.min.js "></script>
    <script src="~/Scripts/index.js"></script>
</head>
<body>
    <div id="head">
        用户:<span id="sp1">@Model.Uid</span>  |@if(Model.LoginState=="no"){<a href="@Url.Action("Login","Users")">登陆</a>}
       else{ <a href="@Url.Action("ExitLogin","Users")">退出</a>}|
        <a href="@Url.Action("SignIn","Users")">注册</a>
    </div>
    <div id="title">留言板</div>
    <div id="txtsuggest">留下你们的一些建议吧~</div>

    @if(Model.LoginState=="未登录")
    {
        <div id="txtTip">你还未登录,请<a href="@Url.Action("Login","Users")">登录</a>或<a href="@Url.Action("SignIn","Users")">注册</a></div>
    }
    <div id="inputComment">
        <textarea id="txtarea"></textarea>
    </div>
    <div id="btnsub">
        <input id="submitComment" class="btnDefult" type="button" value="提交评论" />&nbsp;<span class="msgerror" id="msg"></span></div>

    <div id="txt2">最新评论:</div>
    <div id="ContentBody">
        <div class="contentSpan">
            <div class="contentParent">
                <div class="contentInfo1">1楼<span class="blank"></span><a href="javascript:void(0)">WXL</a><span class="blank"></span>@DateTime.Now.ToString() <span class="blank"></span>发表:</div>
                <div class="contentInfo2">测试测试</div>
                <div class="contentInfo3"><a href="javascript:void()" onclick="Reply(this)">回复</a></div>
            </div>

            <div class="contentchild">
                <div class="contentInfo1">@DateTime.Now.ToString()<span class="blank"></span><a href="javascript:void(0)">SJ</a><span class="blank"></span>回复<span class="blank"></span><a href="javascript:void(0)">WXL</a>:</div>
                <div class="contentInfo2">回复回复</div>
                <div class="contentInfo3"><a href="javascript:void()" onclick="Reply(this)">回复</a></div>
            </div>
             <div class="contentchild">
                <div class="contentInfo1">@DateTime.Now.ToString()<span class="blank"></span><a href="javascript:void(0)">WXL</a><span class="blank"></span>回复<span class="blank"></span><a href="javascript:void(0)">SJ</a>:</div>
                <div class="contentInfo2">测试回复</div>
                <div class="contentInfo3"><a href="javascript:void()" class="reply" onclick="Reply(this)">回复</a></div>
            </div>
            
        </div>

         <div class="contentSpan">
            <div class="contentParent">
                <div class="contentInfo1">2楼<span class="blank"></span><a href="javascript:void(0)">WXL</a><span class="blank"></span>@DateTime.Now.ToString() <span class="blank"></span>发表:</div>
                <div class="contentInfo2">测试测试</div>
                <div class="contentInfo3"><a href="javascript:void()" onclick="Reply(this)">回复</a></div>
            </div>

            <div class="contentchild">
                <div class="contentInfo1">@DateTime.Now.ToString()<span class="blank"></span><a href="javascript:void(0)">SJ</a><span class="blank"></span>回复<span class="blank"></span><a href="javascript:void(0)">WXL</a>:</div>
                <div class="contentInfo2">回复回复</div>
                <div class="contentInfo3"><a href="javascript:void()" onclick="Reply(this)">回复</a></div>
            </div>
             <div class="contentchild">
                <div class="contentInfo1">@DateTime.Now.ToString()<span class="blank"></span><a href="javascript:void(0)">WXL</a><span class="blank"></span>回复<span class="blank"></span><a href="javascript:void(0)">SJ</a>:</div>
                <div class="contentInfo2">测试回复</div>
                <div class="contentInfo3"><a href="javascript:void()" onclick="Reply(this)">回复</a></div>
            </div>
        </div>
    </div>
    <p></p>
</body>
</html>
